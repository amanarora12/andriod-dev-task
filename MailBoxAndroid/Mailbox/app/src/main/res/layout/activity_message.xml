<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextWhite"
    android:id="@+id/scroll_view">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:minHeight="80dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            tools:text="blah blah blah blah blah blah blah blah"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackgound" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">
            <ImageView
                android:id="@+id/img_partcipant"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_initals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_partcipant"
                android:layout_alignLeft="@+id/img_partcipant"
                android:layout_alignRight="@+id/img_partcipant"
                android:layout_alignTop="@+id/img_partcipant"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorTextWhite" />
            <TextView
                android:id="@+id/txt_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/img_partcipant"
                android:singleLine="false"
                tools:text="Disha Patani"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_participants"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                tools:text="Blah! blah blah blah blah blah"
                android:layout_toRightOf="@+id/img_partcipant"
                android:singleLine="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorTextPrimary" />
        </RelativeLayout>

        <TextView
            android:id="@+id/msg_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
